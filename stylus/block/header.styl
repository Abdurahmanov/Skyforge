.header{
  height: 60px;
  background-color: #fff;
  display: flex;
  padding: 0 15px;
  align-items: center;
  box-shadow: 0px 6px 6px 0px rgba(0,0,0,0.3);
  position: relative;
  justify-content: space-between
  z-index:2;
  &__burger{
    width: 20px;
    height: 15px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    cursor: pointer;
    &:hover{
      span{
          background #333
          transition 0.3s
      }
    }
    span{
      height: 3px;
      background: rgba(#333,0.8);
      transition 0.3s
    }
  }
  &__logo{
    position: relative;
    width: 135px;
    height: 65px;
    a{
      background: url(../img/Logo.png) no-repeat;
      background-size: cover;
      width: 100%;
      height: 100%;
      display: block;
      position: absolute;
      left: 0;
      top: 10px;
    }
  }
  &__login{
    text-transform uppercase
    color #333;
    font-family: 'CoreSansLight';
    padding-left: 40px
    position: relative;
    cursor: pointer
    &:before{
      content: ''
      width 20px
      height 25px
      position: absolute;
      top: calc(50% - 10px);
      left 0
      background url("../img/login-icon.png") no-repeat
      background-size cover

    }
  }
}