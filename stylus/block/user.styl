.user{
  display: flex
  justify-content: space-between;
  &__block{
    display: flex;
    padding: 5px 20px;
    background: rgba(0,0,0,0.6);
    width: 890px;
    align-items: center;
    min-height: 60px
  }
  &__photo{
    width: 50px;
    height: 50px;
    border-radius: 50%;
    overflow: hidden;
    margin-right 20px
    img{
      width:100%;
    }
  }
  &__name{
    color: #fff
    font-size: 18px;
    font-family: 'CoreSansLight';
  }
  &__links{
    margin-top 5px
    display: flex
  }
  &__link{
    color: rgba(#84c295,0.8);
    font-family: Verdana;
    font-size: 14px;
    line-height: 18px;
    padding-left 15px
    margin-right 45px
    position: relative;
    transition 0.3s
    &:hover{
      color #84c295
      transition 0.3s
    }
    &:before{
      content: ''
      width 10px
      height: 10px
      position: absolute;
      top: calc(50% - 5px);
      left:0
    }
    &_profile{
      &:before{
        background url("../img/profile-icon.png") no-repeat
        background-size cover
      }
    }
    &_logout{
      &:before{
        background url("../img/logout-icon.png") no-repeat
        background-size cover
        width 12px
        height: 12px
      }
    }
  }
  .btn{
    background rgba(#a00,0.8)
    height 60px
    width 330px
    &:hover{
      background #a00
    }
  }
}