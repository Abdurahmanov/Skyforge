.article{
  margin-top 20px
  &__title{
    color #fff
    font-size 18px
    font-family: 'CoreSansLight';
  }
  &__head{
    background rgba(0,0,0,0.6)
    height 40px
    padding 0 20px
    display: flex;
    align-items center
  }
  &__footer{
    background rgba(0,0,0,0.6)
    height 40px
    padding 0 20px
    display: flex;
    align-items center
  }
  &__social{
    display: flex;
    &-text{
      color: white;
      font-family: Verdana;
      font-size: 14px;
      margin-right 15px
    }
    &-links{
      width 92px
      display flex
      justify-content space-between
    }
    &-link{
      width 20px
      height 20px
      background url("../img/article-social.png") no-repeat
      display: block
      &_rss{
        background-position 0 0
      }
      &_fb{
        background-position -24px 0
      }
      &_tw{
        background-position -48px 0
      }
      &_yout{
        background-position -72px 0
      }
    }
  }
  &__wrapper{
    background rgba(255,255,255,0.6)
    padding 20px
  }
  &__block{
    padding-bottom: 20px;
    border-bottom: 1px dashed #66806d;
    display: flex
  }
  &__photo{
    max-width 750px
    overflow hidden
    margin-right 20px
    position: relative;
    img{
      width 100%
      display: block
    }
    &-description{
      position: absolute;
      bottom: 0;
      width: 100%;
      background: rgba(0,0,0,0.7);
      display: flex;
      height: 50px;
      align-items: center;
      padding 0 20px
      justify-content: space-between;
    }
    &-number{
      font-family: 'skyforge_digits';
      color: #daaa00;
      font-size: 36px;
      padding-left 40px
      position: relative;
      &:before{
        content: ''
        left: 0
        background url("../img/prestige-icon.png") no-repeat
        background-size cover
        width 30px
        height 25px
        position: absolute
        display: block;
      }
    }
  }
  &__btn{
    width: 230px;
    margin-top: 20px;
    background-color: rgba(#66806d,0.8);
    height: 40px;
    &:hover{
      background #66806d
    }
  }
  &__info{
    width calc(100% - 770px)
    display: flex
    flex-direction column
    &-block{
      padding-top 20px
      border-top 1px dashed #66806d
      padding-bottom: 20px;
      &:first-child{
        padding-top 0
        border-top none
      }
      &:last-child{
        margin-top: auto;
        padding-bottom: 0;
      }
    }
    &-text{
      color: #777;
      font-family: Verdana;
      font-size: 14px;
    }
    &-number{
      font-family: 'skyforge_digits';
      font-size: 60px;
      color #000
      margin-top 10px
    }
    &-name{
      font-size: 18px;
      color #000
      font-family: 'CoreSansLight';
    }
    &-photo{
      width 60px
      height 60px
      overflow hidden
      border-radius 50%
      margin-right 10px
      img{
        width 100%
      }
    }
    &-class{
      color: #777;
      font-family: Verdana;
      font-size: 14px;
      padding-left 25px
      position: relative;
      &:after{
        content: ''
        position: absolute;
        left 0
        width 16px
        height 16px
        background url("../img/user-class.png") no-repeat
        background-size cover
        top: calc(50% - 8px);
      }
    }
    &-description{
      margin-top 20px
      color: black;
      font-family: Verdana;
      font-size: 14px;
      height: 85px;
      overflow: hidden;
    }
    &-wrapper{
      display: flex
      align-items center
    }
    &-user{
      &-name{
        font-size: 22px;
        font-family: 'CoreSansLight';
        color #000
      }
    }
    &-btn{
      width: 50px;
      height: 50px
      background url("../img/btn-left.png") no-repeat
      background-size cover
      opacity: 0.8;
      transition 0.3s
      &:hover{
        opacity: 1
        transition 0.3s
      }
      &_right{
        transform: rotate(180deg);
      }
    }
    &-btns{
      display: flex;
      justify-content: space-between;
    }
  }
}